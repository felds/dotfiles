[include]
	path = ~/.gitconfig.local


[alias]
	st = status
	ci = commit --verbose
	br = branch
	co = checkout
	sw = switch
	df = diff
	dfw = diff --ignore-all-space
	stage = add
	unstage = reset HEAD --
	lg = log --color=auto --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)[%an]%Creset' --abbrev-commit
	hash-short = show --pretty=format:"%h" --no-patch
	root = !pwd
	ignored = ls-files . --ignored --exclude-standard --others
	untracked = ls-files . --exclude-standard --others

	# delete already merged branches
	delete-merged-branches = "!git branch --merged | grep -Ev '(^\\*|master|main|dev)' | xargs -n 1 git branch -d"

	# delete local branches that no longer exist on remote
	delete-gone-branches = "!git branch -vv | grep ': gone]' | awk '{print $1}' | xargs git branch -d"


[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[diff]
	tool = vimdiff

[init]
	defaultBranch = master

[apply]
    	whitespace = strip

[core]
	excludesfile = ~/.gitexcludes
	# editor = vim
	autocrlf = input

[diff]
	color   = true
	rename  = stranger
	tool    = vimdiff
	guitool = gvimdiff

[difftool]
	prompt = false


[merge]
	tool    = vimdiff
	guitool = gvimdiff

[mergetool]
	prompt      = false
	keepBackup  = false

[pager]
	branch = false
	color = true

[pull]
	ff = only
	# rebase = true

[push]
	followTags = true
	default = current

[status]
	color = true
